<style>
  .container {
    margin: 6vh auto;
    padding: 1rem;
    width: 1024px;
    max-width: calc(100% - 2rem);
    line-height: 1.5;
    display: grid;
    grid-template-areas:
      "header header"
      "aside main"
      "footer footer";
    gap: 1.5rem;
  }

  .edu-logo {
    position: absolute;
    top: 1rem;
    left: 15vw;
    transform: translatex(-50%);
    width: 150px;
    height: auto;
  }

  header {
    grid-area: header;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.8rem;
    position: relative;
    padding: 1rem;
    border-radius: 0.5rem;
    background: rgb(var(--main-bg));
  }
  h1 {
    font-size: 2.3rem;
    font-weight: 500;
    line-height: 3rem;
    text-align: center;
  }
  h2 {
    text-align: center;
    font-size: 1.6rem;
  }
  .text-gradient {
    background-image: var(--brand-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  .stage-period {
    font-size: 0.9rem;
  }

  aside,
  main,
  footer {
    display: flex;
    flex-direction: column;
    gap: 1.8rem;
    background: rgb(var(--main-bg));
    padding: 2rem;
    position: relative;
    box-sizing: border-box;
    background-clip: padding-box;
    border: solid var(--border-size) transparent;
    border-radius: 0.5rem;
  }

  header:before,
  aside:before,
  main:before,
  footer:before {
    content: "";
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: -1;
    margin: calc(var(--border-size) * (-1));
    border-radius: inherit;
  }

  header:before,
  aside:before {
    background: var(--brand-gradient);
  }

  main:before,
  footer:before {
    background: var(--reverse-brand-gradient);
  }

  aside {
    grid-area: aside;
  }
  main {
    grid-area: main;
  }
  footer {
    grid-area: footer;
  }
  ul {
    padding-left: 1rem;
    display: flex;
    flex-direction: column;
    gap: 0.6rem;
  }
  li {
    margin-bottom: .2rem;
    font-weight: 500;
  }
  p {
    font-size: 0.9rem;
  }
  .conclusion {
    line-height: 1.5rem;
  }

  @media (max-width: 768px) {
    .container {
      grid-template-areas:
        "header"
        "aside"
        "main"
        "footer";
        padding: 0;
        margin: 7vh auto
    }
    header {
      padding: .4rem;
    }
    aside,
    main,
    footer {
      padding: 1rem;
    }
    .edu-logo {
      left: 50%;
    }
    h1 {
      font-size: 1.8rem;
      line-height: 2.5rem;
    }
    h2 {
      font-size: 1.5rem;
    }
  }
</style>
